---
interface Props {
    title: string;
    subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<section
    class="bg-surface pt-32 pb-16 md:pt-40 md:pb-24 border-b border-black/5 relative overflow-hidden"
>
    <!-- Background Pattern -->
    <div
        class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] opacity-[0.03]"
    >
    </div>

    <!-- Decorative Elements -->
    <div class="absolute top-20 right-10 w-32 h-32 border border-primary/5 rotate-45 pointer-events-none hidden md:block"></div>
    <div class="absolute bottom-10 right-20 w-16 h-16 border border-primary/5 rotate-12 pointer-events-none hidden md:block"></div>
    <div class="absolute top-1/2 right-1/4 w-2 h-2 bg-primary/10 rotate-45 pointer-events-none hidden lg:block"></div>
    <div class="absolute bottom-1/3 right-1/3 w-3 h-3 bg-accent/20 rounded-full pointer-events-none hidden lg:block"></div>

    <div class="container mx-auto px-6 relative z-10">
        <div class="max-w-3xl">
            {
                subtitle && (
                    <span class="text-accent font-sans font-medium tracking-widest text-sm uppercase mb-3 block">
                        {subtitle}
                    </span>
                )
            }
            <h1
                class="text-4xl md:text-5xl lg:text-6xl font-serif font-bold text-primary leading-tight"
            >
                {title}
            </h1>
            <!-- Decorative Underline -->
            <div class="mt-6 flex items-center gap-2">
                <div class="w-16 h-1 bg-primary"></div>
                <div class="w-4 h-1 bg-primary/40"></div>
                <div class="w-2 h-1 bg-primary/20"></div>
            </div>
        </div>
    </div>
</section>
