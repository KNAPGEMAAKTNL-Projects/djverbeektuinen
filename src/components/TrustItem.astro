---
import { CheckCircle } from "lucide-react";

interface Props {
    text: string;
    subtext?: string;
}

const { text, subtext } = Astro.props;
---

<div class="flex items-start gap-4 p-6 bg-surface border border-black/5">
    <div class="mt-1 text-primary">
        <CheckCircle className="w-6 h-6" />
    </div>
    <div>
        <h4 class="font-serif font-bold text-primary text-lg">{text}</h4>
        {subtext && <p class="text-sm text-text-muted mt-1">{subtext}</p>}
    </div>
</div>
